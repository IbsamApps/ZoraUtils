<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibsamapps.zorautils.NoConnection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:translationY="-30dp"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/no_connection"
            app:tint="@color/color_lOWEL"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_bold"
            android:text="Oops, No Internet Connection"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:translationY="-20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/josefin_regular"
            android:gravity="center"
            android:lineHeight="20dp"
            android:text="Make sure wifi or cellular data is turned\non &amp; then try again."
            android:textColor="@color/black"
            android:textSize="14dp"
            android:translationY="-20dp" />

        <LinearLayout
            android:id="@+id/try_again"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/try_again"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_bold"
                android:text="TRY AGAIN"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>