<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/try_again"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:onClick="rateUs"
            android:text="Rate us"
            android:textSize="22sp"
            android:fontFamily="@font/adventpro_bold"
            tools:ignore="HardcodedText,UsingOnClickInXml" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/try_again"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:onClick="share"
            android:text="Share App"
            android:textSize="22sp"
            android:fontFamily="@font/adventpro_bold"
            tools:ignore="HardcodedText,OnClick,UsingOnClickInXml" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/try_again"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:onClick="privacyOut"
            android:text="Privacy out"
            android:textSize="22sp"
            android:fontFamily="@font/adventpro_bold"
            tools:ignore="HardcodedText,OnClick,UsingOnClickInXml" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/try_again"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:onClick="privacyIn"
            android:text="Privacy in"
            android:textSize="22sp"
            android:fontFamily="@font/adventpro_bold"
            tools:ignore="HardcodedText,OnClick,UsingOnClickInXml" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/try_again"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:onClick="exitApp"
            android:text="Exit App"
            android:textSize="22sp"
            android:fontFamily="@font/adventpro_bold"
            tools:ignore="HardcodedText,OnClick,UsingOnClickInXml" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>